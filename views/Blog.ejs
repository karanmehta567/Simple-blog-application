<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Add Blog</title>
</head>
<body>
    <%- include('./partials/nav') %>
    <div class="container mt-4">
        <form action='/blog' method="POST" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Cover Image</label>
                <input type="file" class="form-control" id="file" aria-describedby="title" name="file">
              </div>
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label">Title</label>
              <input type="text" class="form-control" id="title" aria-describedby="title" name="title">
            </div>
            <label for="exampleInputEmail1" class="form-label">Body</label>
            <div class="form-floating">
                <textarea class="form-control" placeholder="Leave a comment here" id="body" name="body"></textarea>
              </div>
             <div class="mt-3">
                <button type="submit" class="btn btn-warning">Submit</button>
              </div>
          </form>
    </div>
    <%- include('./partials/script') %>
</body>
</html>