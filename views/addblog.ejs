<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>My blog</title>
</head>
<body>
    <%- include('./partials/nav') %>
    <div class="container">
       <h1><%= blog.title%></h1>
       <img src="/<%= blog.coverImg %>" width="500px">
       <div class="container mt-4">
        <p>Created By: <%= blog.createdBy.fullname %></p>
    </div>
       <pre class="mt-3"><%= blog.body %></pre>
    </div>
    <div class="container mt-4">
        <h2>Comments</h2>
        <% if (locals.user) { %>
                <form action="/blog/comment/<%= blog._id %>" method="post">
                    <div class="mb-3">
                      
                      <input type="text" class="form-control"  name="content" aria-describedby="emailHelp" placeholder="Enter your comment">
                      
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </form>
        <% } %>
        </div>
    <%- include('./partials/script') %>
</body>
</html>